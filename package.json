{
  "name": "bravo-bentley",
  "version": "1.0.0",
  "description": "Discord bot written in Typescript and discord.js hosted on Heroku",
  "main": "index.js",
  "engines": {
    "node": "^16.7.0"
  },
  "scripts": {
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "prestart:dev": "npm run build",
    "start:dev": "nodemon build/index.js",
    "prebuild": "rimraf ./build",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node build/index.js",
    "test": "jest --coverage",
    "index": "yarn vscode-generate-index-standalone src/ scripts/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DaveAldon/bravo-discord-bot.git"
  },
  "keywords": [
    "discord",
    "typescript",
    "bot",
    "heroku"
  ],
  "author": "Dave Aldon",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DaveAldon/bravo-discord-bot/issues"
  },
  "homepage": "https://github.com/DaveAldon/bravo-discord-bot/blob/main/README.md",
  "devDependencies": {
    "@types/node": "^16.7.10",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "1.19.1"
  },
  "dependencies": {
    "@discordjs/builders": "^0.6.0",
    "@discordjs/rest": "^0.1.0-canary.0",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.24",
    "axios": "^0.21.1",
    "discord-api-types": "^0.22.0",
    "discord-slash-commands-client": "^1.2.1",
    "discord.js": "^13.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase-dynamic-links": "^1.1.0",
    "got": "^11.8.2",
    "jest": "^27.0.6",
    "jsdom": "^16.4.0",
    "nodemon": "^2.0.4",
    "requests": "^0.3.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.4",
    "ts-node": "^8.10.2",
    "typescript": "^4.3.5",
    "vscode-generate-index-standalone": "^1.6.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    }
  }
}
